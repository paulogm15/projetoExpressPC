generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Adicione estas linhas:
  relationMode = "prisma"
}

/* ---------------------- AUTENTICAÇÃO ------------------------ */

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("verification")
}

/* ---------------------- USUÁRIOS ------------------------ */

model User {
  id            String     @id @default(cuid())
  name          String     @unique
  email         String
  emailVerified Boolean    @default(false)
  image         String?
  role          Role       @default(PROFESSOR)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  reservas      Reserva[]
  materias      Materia[]   @relation("ProfessorMaterias")
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

/* ---------------------- ACADÊMICO ------------------------ */

model Aluno {
  id          Int          @id @default(autoincrement())
  nome        String
  matricula   String       @unique
  foto        Bytes
  embedding   Float[]
  ativo       Boolean      @default(true)
  createdAt   DateTime     @default(now())

  emprestimos Emprestimo[]

  @@index([ativo])
}

model Turma {
  id        Int      @id @default(autoincrement())
  codigo    String   @unique
  nome      String
  semestre  Int
  ano       Int

  materias  TurmaMateria[]   // ← vínculo indireto
  reservas  Reserva[]
}


model TurmaMateria {
  turmaId   Int
  materiaId Int

  turma     Turma   @relation(fields: [turmaId], references: [id])
  materia   Materia @relation(fields: [materiaId], references: [id])

  @@id([turmaId, materiaId])
}

model Materia {
  id           Int      @id @default(autoincrement())
  nome         String
  codigo       String   @unique

  professorId  String
  professor    User     @relation("ProfessorMaterias", fields: [professorId], references: [id])

  turmas       TurmaMateria[]   // ← vínculo indireto
  reservas     Reserva[]

  createdAt    DateTime @default(now())
}



/* ---------------------- NOTEBOOK ------------------------ */

model Notebook {
  id          Int          @id @default(autoincrement())
  patrimonio  String       @unique
  modelo      String
  status      Status       @default(DISPONIVEL)
  createdAt   DateTime     @default(now())

  observacaoManutencao String?
  dataInicioManutencao DateTime?
  dataFimManutencao    DateTime?

  emprestimos Emprestimo[]
}

/* ---------------------- RESERVA ------------------------ */

model Reserva {
  id           Int           @id @default(autoincrement())
  professorId  String
  turmaId      Int
  materiaId    Int

  dataAula     DateTime
  qtdNotebooks Int
  horario      String
  turno        Turno
  status       StatusReserva @default(ATIVA)
  createdAt    DateTime      @default(now())

  professor    User     @relation(fields: [professorId], references: [id])
  turma        Turma    @relation(fields: [turmaId], references: [id])
  materia      Materia  @relation(fields: [materiaId], references: [id])

  emprestimos  Emprestimo[]
}

/* ---------------------- EMPRÉSTIMO ------------------------ */

model Emprestimo {
  id            Int              @id @default(autoincrement())
  alunoId       Int
  notebookId    Int
  reservaId     Int
  dataRetirada  DateTime         @default(now())
  dataDevolucao DateTime?
  status        StatusEmprestimo @default(ATIVO)

  aluno         Aluno            @relation(fields: [alunoId], references: [id])
  notebook      Notebook         @relation(fields: [notebookId], references: [id])
  reserva       Reserva          @relation(fields: [reservaId], references: [id])
}

/* ---------------------- ENUMS ------------------------ */

enum Role {
  ADMIN
  PROFESSOR
}

enum Status {
  DISPONIVEL
  EM_USO
  MANUTENCAO
}

enum StatusReserva {
  ATIVA
  CANCELADA
  FINALIZADA
}

enum StatusEmprestimo {
  ATIVO
  DEVOLVIDO
  ATRASADO
}

enum Turno {
  MANHA
  TARDE
  NOITE
}